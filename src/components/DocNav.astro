---
interface NavLink {
    slug: string;
    title: string;
}

interface Props {
    prev?: NavLink;
    next?: NavLink;
}

const { prev, next } = Astro.props;

const linkClass =
    "flex flex-col text-sm hover:text-handy-pink py-6 px-2 rounded-lg";
const labelClass = "text-handy-text/50 !font-normal text-xs";
---

{
    (prev || next) && (
        <nav
            class="flex justify-between items-center border-t border-handy-text/20 mt-8"
            aria-label="Documentation navigation"
        >
            {prev ? (
                <a href={`/docs/${prev.slug}`} class={linkClass}>
                    <span class={labelClass}>Previous</span>
                    <span>&larr; {prev.title}</span>
                </a>
            ) : (
                <div />
            )}
            {next ? (
                <a href={`/docs/${next.slug}`} class={`${linkClass} items-end`}>
                    <span class={labelClass}>Next</span>
                    <span>{next.title} &rarr;</span>
                </a>
            ) : (
                <div />
            )}
        </nav>
    )
}
