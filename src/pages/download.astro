---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import platformIcon from "../images/icon.png";
---

<MainLayout
    title="Download Handy"
    description="Download Handy - the free and open source speech to text application for Windows, macOS, and Linux"
>
    <div class="flex flex-col items-center gap-6 w-full">
        <Image
            src={platformIcon}
            width={256}
            alt="The handy logo, with a pink rounded circle as the background, with a white cartoon smiling hand shape in the middle."
        />

        <h2 class="text-2xl font-semibold text-center mb-2">Download Handy</h2>

        <div class="flex flex-col w-64 gap-4">
            <a
                href="/"
                class="px-6 py-4 rounded-lg bg-handy-pink !text-handy-dark-pink hover:bg-handy-light-pink"
                >Windows (.exe)</a
            >
            <a
                href="/"
                class="px-6 py-4 rounded-lg bg-handy-pink !text-handy-dark-pink hover:bg-handy-light-pink"
                >MacOS (.dmg)</a
            >
            <div class="flex flex-col gap-2">
                <h4>Linux</h4>
                <a
                    href="/"
                    class="px-6 py-4 rounded-lg bg-handy-pink !text-handy-dark-pink hover:bg-handy-light-pink"
                    >.AppImage</a
                >
                <a
                    href="/"
                    class="px-6 py-4 rounded-lg bg-handy-pink !text-handy-dark-pink hover:bg-handy-light-pink"
                    >.deb</a
                >
                <a
                    href="/"
                    class="px-6 py-4 rounded-lg bg-handy-pink !text-handy-dark-pink hover:bg-handy-light-pink"
                    >.rpm</a
                >
            </div>
        </div>
    </div>
</MainLayout>
